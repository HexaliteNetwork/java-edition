datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

generator client {
    provider      = "cargo prisma"
    output        = "../src/prisma.rs"
}

model Player {
    id           String    @id @unique @db.Uuid
    hexes        Int       @default(0)
    lastUsername String?
    lastSeen     DateTime?
    createdAt    DateTime? @default(now())
    updatedAt    DateTime? @default(now())

    @@index(lastUsername)
}

